<ContentDialog
    x:Class="AlwaysOnTop.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About"
    SecondaryButtonText="Back"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="0,12">
                <TextBlock Text="Always on Top&#xA;Version 1.2.0&#xA;&#xA;Copyright (c) Ayamadori" TextWrapping="Wrap"/>
                <HyperlinkButton Content="https://sites.google.com/site/ayamadori/" NavigateUri="https://sites.google.com/site/ayamadori"/>
                <HyperlinkButton Content="Twitter: @ayamadori" NavigateUri="https://twitter.com/ayamadori"/>
                <HyperlinkButton Content="Privacy Policy" NavigateUri="https://github.com/ayamadori/AlwaysOnTop/blob/master/PrivacyPolicy.md"/>
                <Button Content="Rate this app" Margin="0,12" Click="RateButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ContentDialog>

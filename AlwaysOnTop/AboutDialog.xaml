<ContentDialog
    x:Class="AlwaysOnTop.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About"
    SecondaryButtonText="Back"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="0,12">
                <TextBlock Text="Always on Top&#xA;Version 1.3.1&#xA;&#xA;Copyright (c) Ayamadori" TextWrapping="Wrap"/>
                <HyperlinkButton Content="https://ayamadori.github.io/" NavigateUri="https://ayamadori.github.io/"/>
                <HyperlinkButton Content="Privacy Policy" NavigateUri="https://ayamadori.github.io/AlwaysOnTop/PrivacyPolicy.html"/>
                <Button Content="Rate this app" Margin="0,12" Click="RateButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ContentDialog>
